<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCCCCC"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <ImageButton
            android:id="@+id/new_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/start_new"
            android:src="@drawable/newpage" />
        <ImageButton
            android:id="@+id/draw_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/brush"
            android:src="@drawable/paintbrush" />
        <ImageButton
            android:id="@+id/erase_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/erase"
            android:src="@drawable/eraser" />
        <ImageButton
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/save"
            android:src="@drawable/save" />
        <ImageButton
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="Profile"
            android:src="@drawable/profile"/>
    </LinearLayout>

    <com.example.user.letstalkart.DrawingView
        android:id="@+id/drawing"
        android:layout_width="339dp"
        android:layout_height="97dp"
        android:background="#FFFFFFFF"
        android:layout_gravity="left"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FF660000"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FF660000"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton11"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">
        <!-- Top Row -->
        <LinearLayout
            android:id="@+id/paint_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
        <!-- Bottom Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FFFF0000"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FFFF0000"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton10"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton11" />

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FFFF6600"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FFFF6600"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton9"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton10" />

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FFFFCC00"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FFFFCC00"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton8"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton9" />

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FF009900"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FF009900"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton7"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton8" />

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FF009999"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FF009999"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton6"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton7" />
    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FF0000FF"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FF0000FF"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton5"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton6" />

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FF990099"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FF990099"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton4"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton5" />

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FFFF6666"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FFFF6666"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton3"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton4" />

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FFFFFFFF"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FFFFFFFF"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton2"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton3" />

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FF787878"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FF787878"
        android:layout_gravity="right"
        android:layout_below="@+id/imageButton"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton2" />

    <ImageButton
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:background="#FF000000"
        android:contentDescription="@string/paint"
        android:onClick="paintClicked"
        android:src="@drawable/paintbrush"
        android:tag="#FF000000"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/drawing"
        android:layout_toRightOf="@+id/drawing"
        android:layout_toEndOf="@+id/drawing"
        android:id="@+id/imageButton" />
</RelativeLayout>
